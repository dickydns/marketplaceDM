<%  include ../component/header %>
<%  include ../component/navbar %>





<!-- Loader -->
<div id="page-preloader"><span class="spinner"></span></div>
<!-- Loader end -->

<div class="layout-theme animated-css"  data-header="sticky" data-header-top="200"  > 
  
  <!-- Start Switcher -->
  <div class="switcher-wrapper">
    <div class="demo_changer">
      <div class="demo-icon customBgColor"><i class="fa fa-cog fa-spin fa-2x"></i></div>
      <div class="form_holder">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="predefined_styles">
              <div class="skin-theme-switcher">
                <h4>Color</h4>
                <a href="javascript:void(0);" data-switchcolor="color1" class="styleswitch" style="background-color:#fe5656;"> </a> <a href="javascript:void(0);" data-switchcolor="color2" class="styleswitch" style="background-color:#4fb0fd;"> </a> <a href="javascript:void(0);" data-switchcolor="color3" class="styleswitch" style="background-color:#ffc73c;"> </a> <a href="javascript:void(0);" data-switchcolor="color4" class="styleswitch" style="background-color:#ff8300;"> </a> <a href="javascript:void(0);" data-switchcolor="color5" class="styleswitch" style="background-color:#02cc8b;"> </a> </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <!-- End Switcher -->
  
  <div id="wrapper">
    
    
    <div class="border-main">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <div class="row">
              <div class="col-xs-12">
                <div class="wrap-title-page">
                  
                </div>
                <!-- end wrap-title-page --> 
              </div>
              <!-- end col --> 
            </div>
            <!-- end row -->
         
              
            
            <div class="section-area">
                    <div class="row">
                            <div class="col-xs-12">
                                <div class="panel panel-danger">
                                    <div class="panel-heading">
                                        <div class="panel-title">
                                            <div class="row">
                                                <div class="col-xs-6">
                                                    <h5><span class="fa fa-shopping-cart"></span> Shopping Cart</h5>
                                                </div>
                                                <div class="col-xs-6">
                                                    <a href="/" type="button" class="btn btn-primary btn-sm btn-block">
                                                        Continue shopping
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        
                                        <% for(var i=0; i < cart.length; i++) { %>
                                        <div class="row">
                                            <div class="col-xs-2">
                                                <div style="width:100%; height:100px; overflow:hidden;">
                                                   <a href="/images/<%= cart[i].picture %>" target="_blank"> <img  class="img-responsive" src="/images/<%= cart[i].picture %>"></a>
                                                </div>
                                            </div>
                                            <div class="col-xs-4">
                                                <h4 class="product-name"><strong><%= cart[i].name %></strong></h4><h4><small><%= cart[i].category_name %></small></h4>
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="col-xs-10 text-right">
                                                    <% var totalPrice = cart[i].price*cart[i].total  %>
                                                    Price * Quality 
                                                    <h6><strong>Rp. <%= cart[i].price.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,")  %> x <%= cart[i].total %> : <%= totalPrice.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,")  %></strong></h6>
                                                </div>
                                                
                                                <div class="col-xs-2">
                                                        <a class="btn " title="delete" href="/add_cart/deleteCart/<%= cart[i].id_cart%>"> <i class="product-list__del icon icon-trash color_primary"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <hr>
                                        <% } %>
                                        
                                        
                                    </div>
                                    <div class="panel-footer">
                                        <div class="row text-center">
                                            <div class="col-xs-9">
                                                <h4 class="text-right">Total : <strong>Rp. <% if(total[0].totalPrice === '0' || total[0].totalPrice === null){ } else{ %> <%= total[0].totalPrice.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,") %><% } %></strong></h4>
                                            </div>
                                            <div class="col-xs-3">
                                                <% if(total[0].totalPrice === '0' || total[0].totalPrice === null){ } else{ %> 
                                                <a href="/checkout" type="button" class="btn btn-success btn-block">
                                                    Checkout
                                                </a>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
            <!-- end section-area -->
            
            
          </div>
          <!-- end col --> 
        </div>
        <!-- end row --> 
      </div>
      <!-- end container --> 
    </div>
    <!--end border-main -->


    <!-- social list client -->
    <% include ../component/socialConnect %>
    
    <!-- footer / copyright -->
    <% include ../component/copyright %>
    

  </div>
  <!-- end #wrapper --> 
  
</div>
<!-- end layout-theme --> 


<!-- end -->

<% include ../component/footer %>