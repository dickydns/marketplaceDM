<%  include ../component/header %>
<%  include ../component/navbar %>





<!-- Loader -->
<div id="page-preloader"><span class="spinner"></span></div>
<!-- Loader end -->

<div class="layout-theme animated-css"  data-header="sticky" data-header-top="200"  > 
  
  <!-- Start Switcher -->
  <div class="switcher-wrapper">
    <div class="demo_changer">
      <div class="demo-icon customBgColor"><i class="fa fa-cog fa-spin fa-2x"></i></div>
      <div class="form_holder">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="predefined_styles">
              <div class="skin-theme-switcher">
                <h4>Color</h4>
                <a href="javascript:void(0);" data-switchcolor="color1" class="styleswitch" style="background-color:#fe5656;"> </a> <a href="javascript:void(0);" data-switchcolor="color2" class="styleswitch" style="background-color:#4fb0fd;"> </a> <a href="javascript:void(0);" data-switchcolor="color3" class="styleswitch" style="background-color:#ffc73c;"> </a> <a href="javascript:void(0);" data-switchcolor="color4" class="styleswitch" style="background-color:#ff8300;"> </a> <a href="javascript:void(0);" data-switchcolor="color5" class="styleswitch" style="background-color:#02cc8b;"> </a> </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <!-- End Switcher -->
  
  <div id="wrapper">
    
    
    <div class="border-main">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <div class="row">
              <div class="col-xs-12">
                <div class="wrap-title-page">
                  
                </div>
                <!-- end wrap-title-page --> 
              </div>
              <!-- end col --> 
            </div>
            <!-- end row -->
         
              
            
            <div class="section-area">
                <div class="container_wrapped">
                        <div class="panel panel-danger">
                            <div class="panel-heading">
                                <div class="panel-title">
                                    <div class="row">
                                        <div class="col-xs-10">
                                            <h5>Confirm Order</h5>
                                        </div>
                                        <div class="col-xs-2">
                                            <a class="btn btn-default" href="/profileUser">Back to User Profile</a> </div>
                                                
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="panel-body" style="padding:20px;">
                            
                            <div class="row">
                                <div class="col-lg-7">
                                    <% for(var i=0; i < detailConfirm.length; i++) { %>
                                        <div class="row">
                                            <div class="col-xs-2">
                                                <div style="width:100%; height:100px; overflow:hidden;">
                                                    <a href="/images/<%= detailConfirm[i].picture %>" target="_blank"> <img  class="img-responsive" src="/images/<%= detailConfirm[i].picture %>"></a>
                                                </div>
                                            </div>
                                            <div class="col-xs-4">
                                                <h5 class="product-name"><strong><a href="/detail/<%= detailConfirm[i].id_product %>"><%= detailConfirm[i].name %></a></strong></h4><h4><small><%= detailConfirm[i].category_name %></small></h5>
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="col-xs-12 text-right">
                                                    <% var totalPrice = detailConfirm[i].price*detailConfirm[i].total  %>
                                                    <label class="label label-default"> Price * Qualiy</label> <br> <%= detailConfirm[i].price.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,") %> *  <%= detailConfirm[i].total.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,") %>
                                                    <hr/>
                                                    <h6><strong>Rp. <%= totalPrice.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,")  %> </strong></h6>
                                                    <br/>
                                                    
                                                </div>
        
                                            </div>
                                        </div>
                                        <hr>
                                    <% } %>
                                </div>

                                <div class="col-lg-5">
                                    <div style="padding:15px; width:100%; background:#f1f1f1;">
                                        <!-- row -->
                                        <div class="row">
                                            <div class="col-lg-6"> <h6> Status Payment </h6></div>
                                            <div class="col-lg-6">
                                                    <% if(statusPayment.statusPayment === '0'){ %>
                                                        <span class="label label-danger"><i class="fa fa-close"></i> Unpaid / Pending</span>
                                                    <% } else if(statusPayment.statusPayment === '1'){ %>
                                                        <span class="label label-warning">Order already Proccess</span>
                                                    <% } else if(statusPayment.statusPayment === '2'){ %>
                                                        <span class="label label-success">Transaction Sucess</span>
                                                    <% } else{ %>   
                                                        <span class="label label-success"><i class="fa fa-credit-card"></i> PAID </span>
                                                    <% } %>
                                                    
                                            </div>
                                        </div> 
                                        <!-- end rows -->
                                            
                                        <!-- row -->
                                        <div class="row">
                                            <div class="col-lg-6"> <h6> Invoice Number </h6></div>
                                            <div class="col-lg-6">
                                                <span class="label label-default"><%= invoiceNumber %></span>
                                            </div>
                                        </div> 
                                        <!-- end rows -->

                                        <!-- row -->
                                        <div class="row">
                                                <div class="col-lg-6"> <h6> Payment Slip Picture </h6></div>
                                                <div class="col-lg-6">
                                                    <% if(orderData[0].paymentSlip === "" || orderData[0].paymentSlip === null){ %>
                                                        <span class="label label-default">None</span>
                                                    <% } else{ %>
                                                        <span class="label label-default"><a href="/images/payment/<%= orderData[0].paymentSlip %>" target="_blank">Already</a></span>
                                                    <% } %>

                                                </div>
                                        </div> 
                                        <!-- end rows -->

                                        <!-- row -->
                                        <div class="row">
                                                <div class="col-lg-6"> <h6> Total Price </h6></div>
                                            <div class="col-lg-6">
                                                <span class="label label-default">Rp <%= totalPaymentAll[0].total.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,") %></span>
                                            </div>
                                        </div> 
                                        <!-- end rows -->
                                    </div>
                                    <%  if(shippingInfo.length > 0){ } else{ %>
                                    <div class="bg-danger" style="padding:15px;">
                                         <!-- row -->
                                         <div class="row">
                                                <div class="col-lg-12"> <h6> Upload Payment Slip  </h6></div>
                                                
                                                <div class="col-lg-12">
                                                    
                                                    <form action="/profileUser/uploadPaymentSlip/<%= invoiceNumber %>" enctype="multipart/form-data" method="POST">
                                                        <input type="file" id="paymentSlip" name="paymentSlip" accept="image/*"  class="form-control-file">
                                                        <br>
                                                        <br>
                                                        <input type="submit" value="Sent" class="btn  pull-right" style="width:100% !important;">
                                                    </form>
                                                </div>
                                            </div> 
                                            <!-- end rows -->
                                    </div>
                                    <% } %>
                                    <%  if(shippingInfo.length > 0){ %>
                                    <div style="padding:15px; width:100%; background:#f1f1f1;">
        
                                        <div class="row">
                                            <div class="col-lg-6">
                                                Services 
                                            </div>
                                            <div class="col-lg-6">
                                                <span class="label label-default"><%=  shippingInfo[0].services %></span>
                                            </div>                                
                                        </div>
                                        <br>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                Services Number 
                                            </div>
                                            <div class="col-lg-6">
                                                <span class="label label-default"><%=  shippingInfo[0].servicesNum %></span>
                                            </div>                                
                                        </div>
                                                                               
                                    </div>

                                    <% if(statusPayment.statusPayment === '2'){ } else{ %>
                                    <div class="bg-success"  style=" overflow:hidden; padding:15px; width:100%;">
                                        <form action="/profileUser/receivedOrder/<%= invoiceNumber %>" method="post">
                                            <button class="btn btn-success pull-right" onclick="javascript: return confirm('item already received ? ')">Item Received</button>
                                        </form>   
                                    </div>
                                    
                                    <% } 
                                 } else { } %>
                                </div>
                            </div>
                            
                                
                            </div>

                        </div>
                </div>
            </div>
            <!-- end section-area -->
            
            
          </div>
          <!-- end col --> 
        </div>

        <!-- end row --> 
      </div>
      <!-- end container --> 
    </div>
    <!--end border-main -->


    <!-- social list client -->
    <% include ../component/socialConnect %>
    
    <!-- footer / copyright -->
    <% include ../component/copyright %>
    
    
  <!-- end #wrapper --> 
  
</div>
<!-- end layout-theme --> 


<!-- end -->

<% include ../component/footer %>